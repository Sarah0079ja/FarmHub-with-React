{
  "name": "farmhub",
  "version": "1.0.0",
  "description": "FarmHub agricultural investment app",
  "main": "server.js",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "concurrently": "^5.0.2",
